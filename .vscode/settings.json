{
  "material-icon-theme.folders.color": "#a0a0a0",
  "git.enableCommitSigning": false,
  "html.format.indentHandlebars": true,
  "html.format.maxPreserveNewLines": 3,
  "html.format.templating": true,

  "[html]": {
    "editor.tabSize": 2
  },
  "editor.formatOnSave": true,

  "css.lint.boxModel": "warning",
  "css.lint.universalSelector": "warning",
  "css.lint.duplicateProperties": "warning",
  "css.lint.emptyRules": "error",
  "css.lint.float": "warning",
  "css.lint.important": "warning",
  "css.lint.zeroUnits": "error",
  "less.lint.duplicateProperties": "warning",
  "less.lint.emptyRules": "error",
  "less.lint.float": "warning",
  "less.lint.important": "warning",
  "less.lint.propertyIgnoredDueToDisplay": "error",
  "less.lint.zeroUnits": "error",
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.emptyRules": "error",
  "scss.lint.float": "warning",
  "scss.lint.important": "warning",
  "scss.lint.propertyIgnoredDueToDisplay": "error",
  "scss.lint.zeroUnits": "error",
  "scss.lint.boxModel": "warning",
  "scss.lint.universalSelector": "warning",
  "path-intellisense.autoTriggerNextSuggestion": true,
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,
  "path-intellisense.showHiddenFiles": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "files.associations": {
    "*.map": "json",
    "manifest.webmanifest": "json"
  },

  "editor.tabCompletion": "onlySnippets",
  "editor.stickyTabStops": true,
  "markdown-preview-github-styles.colorTheme": "light",
  "webvalidator.validateOnSave": true,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": true,
  "todohighlight.defaultStyle": {
    "borderRadius": "3px"
  },
  "svgPreview.autoOpen": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "liveServer.settings.port": 8080,
  "liveServer.settings.file": "404.html",
  "background.enabled": false
}
